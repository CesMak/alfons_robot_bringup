   <launch>


    <arg name="start_rviz"    default="True"/>


    <!-- ros_args.launch -->
    <arg name="alfons_robot_bringup" default="battery_monitor" doc="Name of ROS package."/>
    <arg name="baud"    default="57600"/>
    <arg name="port"    default="/dev/ttyACM1"/>

    <node pkg="rosserial_python" type="serial_node.py" name="$(arg alfons_robot_bringup)_node">
        <param name="port" value="$(arg port)"/>
        <param name="baud" value="$(arg baud)"/>
    </node>

    <!-- Start rviz -->
    <group if="$(arg start_rviz)" >
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find alfons_robot_bringup)/config/robot.rviz"/>
    </group>

    </launch>